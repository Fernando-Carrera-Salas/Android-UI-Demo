<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item
                android:left="2dp"
                android:right="2dp"
                android:bottom="5dp">
                <shape
                    android:shape="oval">
                    <solid
                        android:color="@color/light_gray"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape
                    android:shape="oval">
                    <solid
                        android:color="@color/light_gray"/>
                </shape>
            </item>
            <item
                android:left="2dp"
                android:right="2dp"
                android:bottom="5dp">
                <shape
                    android:shape="oval">
                    <solid
                        android:color="@color/colorAccent"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>