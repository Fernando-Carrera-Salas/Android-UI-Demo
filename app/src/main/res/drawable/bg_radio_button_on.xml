<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_pressed="true">
        <layer-list>
            <item
                android:top="4dp"
                android:left="4dp"
                android:bottom="4dp"
                android:right="4dp">
                <shape
                    android:shape="oval">
                    <solid
                        android:color="@color/light_gray"/>
                </shape>
            </item>
            <item>
                <shape
                    android:shape="oval">
                    <stroke
                        android:width="2dp"
                        android:color="@color/light_gray"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item
                android:top="4dp"
                android:left="4dp"
                android:bottom="4dp"
                android:right="4dp">
                <shape
                    android:shape="oval">
                    <solid
                        android:color="@color/dark_gray"/>
                </shape>
            </item>
            <item>
                <shape
                    android:shape="oval">
                    <stroke
                        android:width="2dp"
                        android:color="@color/dark_gray"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>