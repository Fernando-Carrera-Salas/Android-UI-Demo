<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_item_dropdown"
    android:background="@color/white_to_light_gray"
    android:layout_height="40dp">
    <View
        android:id="@+id/v_divider_item_dropdown"
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:visibility="gone"
        android:padding="10dp"
        android:id="@+id/iv_item_dropdown"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:layout_toEndOf="@id/iv_item_dropdown"
        android:id="@+id/tv_item_dropdown"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/dark_gray"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>