<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:background="#fff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <com.java.uidemo.view.DropdownButton
                android:id="@+id/db_dropdown_qr"
                android:layout_weight="1"
                android:background="@drawable/bg_field"
                android:layout_width="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_height="60dp">
                <ImageView
                    android:padding="15dp"
                    android:src="@drawable/qr"
                    android:id="@+id/iv_dropdown_qr"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:gravity="center_vertical"
                    android:id="@+id/tv_dropdown_qr"
                    android:paddingStart="60dp"
                    android:paddingEnd="20dp"
                    android:textSize="16sp"
                    android:textColor="@color/dark_gray_to_light_gray"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageView
                    android:padding="20dp"
                    android:rotation="270"
                    android:src="@drawable/back"
                    android:layout_alignParentEnd="true"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:tint="@color/dark_gray_to_light_gray" />
            </com.java.uidemo.view.DropdownButton>
            <ImageView
                android:id="@+id/iv_bt_scan_qr"
                android:padding="5dp"
                android:src="@drawable/scan"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:tint="@color/dark_gray_to_light_gray" />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <EditText
                android:focusableInTouchMode="false"
                android:inputType="none"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:background="@drawable/bg_field_disabled"
                android:id="@+id/et_scan_result_qr"
                android:textCursorDrawable="@null"
                android:hint="@string/scan_result"
                android:imeOptions="actionDone"
                android:maxLength="50"
                android:maxEms="50"
                android:singleLine="true"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="120dp"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/dark_gray"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <ImageView
                android:id="@+id/iv_bt_web_qr"
                app:tint="@color/dark_gray_to_light_gray"
                android:src="@drawable/web"
                android:padding="15dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="60dp"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
            <ImageView
                android:id="@+id/iv_bt_copy_qr"
                app:tint="@color/dark_gray_to_light_gray"
                android:src="@drawable/copy"
                android:padding="18dp"
                android:layout_alignParentEnd="true"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <EditText
                android:background="@drawable/bg_field"
                android:id="@+id/et_generate_qr"
                android:textCursorDrawable="@null"
                android:imeOptions="actionDone"
                android:maxLength="50"
                android:maxEms="50"
                android:singleLine="true"
                android:maxLines="1"
                android:paddingStart="20dp"
                android:paddingEnd="60dp"
                android:hint="@string/enter_some_text_here_"
                android:textColorHint="@color/light_gray"
                android:textColor="@color/dark_gray"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
            <ImageView
                android:id="@+id/iv_bt_generate_qr"
                app:tint="@color/dark_gray_to_light_gray"
                android:src="@drawable/create"
                android:padding="15dp"
                android:layout_alignParentEnd="true"
                android:layout_width="60dp"
                android:layout_height="60dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="300dp"
            android:layout_height="300dp">
            <RelativeLayout
                android:id="@+id/rl_generated_qr"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/iv_generated_qr"
                    android:scaleType="fitEnd"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_generated_qr"
                    android:textColor="@color/black"
                    android:background="@color/white"
                    android:padding="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/iv_bt_download_generated_qr"
                android:src="@drawable/download"
                android:alpha="0.5"
                android:padding="12dp"
                android:background="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/dark_gray_to_light_gray" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>