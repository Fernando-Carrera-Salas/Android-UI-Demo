<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:background="@color/colorPrimary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:layout_marginBottom="80dp"
            android:paddingTop="150dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp"
            android:clipToPadding="false"
            android:id="@+id/rv_chat_messages_chat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="35dp"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_height="70dp">
            <ImageView
                android:id="@+id/iv_profile_chat"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            app:cardElevation="8dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/ui_demo_green"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_name_chat"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <EditText
                android:textColorHint="@color/light_gray"
                android:imeOptions="actionSend"
                android:inputType="text"
                android:id="@+id/et_chat"
                android:maxEms="255"
                android:maxLength="255"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingStart="15dp"
                android:paddingEnd="120dp"
                android:hint="@string/write_a_message_"
                android:layout_margin="10dp"
                android:background="@drawable/bg_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:id="@+id/iv_bt_send_image_chat"
                android:padding="12dp"
                android:src="@drawable/image"
                android:layout_marginEnd="70dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/dark_gray_to_light_gray" />
            <ImageView
                android:id="@+id/iv_bt_send_chat"
                android:padding="12dp"
                android:src="@drawable/send"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:tint="@color/dark_gray_to_light_gray" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>