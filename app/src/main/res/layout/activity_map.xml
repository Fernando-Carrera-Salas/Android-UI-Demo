<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <fragment
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/google_map"
            android:name="com.google.android.gms.maps.SupportMapFragment" />
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:elevation="5dp"
            android:layout_margin="15dp"
            android:background="@drawable/bg_round_button_0"
            android:id="@+id/rl_bt_style_map"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:padding="12dp"
                android:src="@drawable/brush"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:tint="@color/dark_gray_to_light_gray" />
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:elevation="5dp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="15dp"
            android:background="@drawable/bg_round_button_0"
            android:id="@+id/rl_bt_gyro_map"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:padding="10dp"
                android:id="@+id/iv_bt_gyro_map"
                android:src="@drawable/gyroscope"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:tint="@color/dark_gray_to_light_gray" />
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:elevation="5dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:background="@drawable/bg_round_button_0"
            android:id="@+id/rl_bt_north_map"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:id="@+id/iv_bt_north_map"
                android:padding="5dp"
                android:src="@drawable/north"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:tint="@color/dark_gray_to_light_gray" />
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:focusable="true"
            android:elevation="5dp"
            android:layout_marginTop="100dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_round_button_0"
            android:id="@+id/rl_bt_location_map"
            android:layout_width="60dp"
            android:layout_height="60dp">
            <ImageView
                android:padding="10dp"
                android:src="@drawable/map_marker"
                android:layout_centerInParent="true"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:tint="@color/dark_gray_to_light_gray" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>