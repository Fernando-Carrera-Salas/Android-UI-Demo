<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:scrollbars="none"
        android:id="@+id/sv_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <ImageView
                    android:id="@+id/iv_scroll_picture_profile"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile_0"
                    android:layout_width="match_parent"
                    android:layout_height="300dp" />
                <ImageView
                    android:src="@drawable/profile_ornament_1"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <RelativeLayout
                    android:id="@+id/rl_bt_scroll_likes_profile"
                    android:layout_margin="15dp"
                    android:background="@drawable/bg_round_button_0"
                    android:layout_alignParentBottom="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <ImageView
                        android:id="@+id/iv_bt_scroll_likes_profile"
                        android:layout_marginBottom="20dp"
                        android:padding="12dp"
                        android:src="@drawable/like"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:tint="@color/dark_gray_to_light_gray" />
                    <TextView
                        android:id="@+id/tv_bt_scroll_likes_profile"
                        android:textColor="@color/dark_gray_to_light_gray"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_bt_scroll_friends_profile"
                    android:layout_margin="15dp"
                    android:background="@drawable/bg_round_button_0"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp">
                    <ImageView
                        android:id="@+id/iv_bt_scroll_friends_profile"
                        android:layout_marginBottom="20dp"
                        android:padding="12dp"
                        android:src="@drawable/friends"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:tint="@color/dark_gray_to_light_gray" />
                    <TextView
                        android:id="@+id/tv_bt_scroll_friends_profile"
                        android:textColor="@color/dark_gray_to_light_gray"
                        android:textSize="18sp"
                        android:layout_margin="10dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <TextView
                android:id="@+id/tv_text_profile"
                android:textSize="16sp"
                android:textColor="@color/dark_gray"
                android:padding="20dp"
                android:text="@string/lorem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/rl_fixed_picture_profile"
        android:layout_marginTop="-200dp"
        android:layout_width="match_parent"
        android:layout_height="325dp">
        <ImageView
            android:id="@+id/iv_fixed_picture_profile"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_0"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <ImageView
            android:layout_marginBottom="25dp"
            android:src="@drawable/profile_ornament_1"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="10dp" />
        <ImageView
            android:alpha="0.5"
            android:layout_alignParentBottom="true"
            android:background="@drawable/profile_ornament_2"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <ImageView
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/profile_ornament_2"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <RelativeLayout
            android:id="@+id/rl_bt_fixed_likes_profile"
            android:background="@drawable/bg_round_button_0"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/iv_bt_fixed_likes_profile"
                android:layout_marginBottom="20dp"
                android:padding="12dp"
                android:src="@drawable/like"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tint="@color/dark_gray_to_light_gray" />
            <TextView
                android:id="@+id/tv_bt_fixed_likes_profile"
                android:textColor="@color/dark_gray_to_light_gray"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_bt_fixed_friends_profile"
            android:background="@drawable/bg_round_button_0"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_width="80dp"
            android:layout_height="80dp">
            <ImageView
                android:id="@+id/iv_bt_fixed_friends_profile"
                android:layout_marginBottom="20dp"
                android:padding="12dp"
                android:src="@drawable/friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:tint="@color/dark_gray_to_light_gray" />
            <TextView
                android:id="@+id/tv_bt_fixed_friends_profile"
                android:textColor="@color/dark_gray_to_light_gray"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="invisible"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/rl_friends_profile"
        android:background="#AA000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_friends_profile"
            android:background="@drawable/bg_side_panel_r"
            android:scrollbarThumbVertical="@drawable/scrollbar"
            android:scrollbars="vertical"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingEnd="0dp"
            android:clipToPadding="false"
            android:layout_alignParentEnd="true"
            android:layout_width="200dp"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</RelativeLayout>